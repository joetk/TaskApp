<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.UsuarioNormalActivity">

    <Button
        android:id="@+id/buttonTodas"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@color/light_Orange"
        android:text="Todas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProceso"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@color/green_light"
        android:text="Proceso"
        app:layout_constraintStart_toEndOf="@+id/buttonTodas"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listasTareas"
        android:layout_width="368dp"
        android:layout_height="422dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProceso" />

    <Button
        android:id="@+id/buttonTareas"
        android:layout_width="126dp"
        android:layout_height="31dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_grey_bg"
        android:text="+Crear Tareas"
        app:layout_constraintStart_toEndOf="@+id/buttonProceso"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
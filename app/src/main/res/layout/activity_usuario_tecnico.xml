<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.UsuarioTecnicoActivity">

    <Button
        android:id="@+id/buttonBusqueda"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="#e9e8e8"
        android:text="Busqueda"
        app:layout_constraintStart_toEndOf="@+id/buttonProceso"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonProceso"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@color/green_light"
        android:text="Proceso"
        app:layout_constraintStart_toEndOf="@+id/buttonPendiente"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPendiente"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:background="@color/light_Orange"
        android:text="Pendiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListViewTareas"
        android:divider="#1e1e1e"
        android:dividerHeight="3px"
        android:layout_width="368dp"
        android:layout_height="427dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProceso" />

</android.support.constraint.ConstraintLayout>